# Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=3001
HOST=0.0.0.0
CORS_ORIGIN=https://üretimgo.com

# Database Configuration (Production - Update with your production DB)
DATABASE_URL="postgresql://postgres:PRODUCTION_PASSWORD@localhost:5432/uretim-takip-prod"

# JWT Configuration (Production - Use strong secret)
JWT_SECRET="PRODUCTION_JWT_SECRET_CHANGE_THIS_IN_PRODUCTION"

# Redis Configuration (Production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=PRODUCTION_REDIS_PASSWORD
REDIS_DB=0

# Email Configuration (Production)
EMAIL_USER=info@üretimgo.com
EMAIL_PASS="PRODUCTION_EMAIL_PASSWORD"

# Frontend URL (Production)
FRONTEND_URL=https://üretimgo.com

# SSL Configuration (Production)
SSL_KEY_PATH=/etc/ssl/private/uretimgo.key
SSL_CERT_PATH=/etc/ssl/certs/uretimgo.crt

# Security Settings (Production)
SECURE_COOKIES=true
TRUST_PROXY=true
LOG_LEVEL=error

# Performance Settings (Production)
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15 